        },
        {
            "name": "Get Students List",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{apiKey}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/students",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "students"]
                }
            }
        },
        {
            "name": "Get News (US)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{apiKey}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/news",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "news"]
                }
            }
        },
        {
            "name": "Get News (India)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{apiKey}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/news?location=chennai",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "news"],
                    "query": [
                        {
                            "key": "location",
