                },
                "url": {
                    "raw": "{{baseUrl}}/api/chat",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "chat"]
                }
            }
        },
        {
            "name": "Chat - General Knowledge",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
